<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mobile_vertical_stepper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false">
    <!-- Visible only when there is a drawing exception -->
    <TextView
        android:id="@+id/step_element_title_exception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/step_element_exception"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/io_ta_stepper_form_12dp"
        android:text="@string/io_ta_mobile_exception_stepper_element_size_invalid"
        android:textColor="@color/io_ta_blue_500"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/step_element_exception"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_sad_face"
        android:visibility="gone" />
</RelativeLayout>